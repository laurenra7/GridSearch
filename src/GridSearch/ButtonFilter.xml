<?xml version="1.0" encoding="utf-8" ?>
<widget id="GridSearch.widget.ButtonFilter" needsEntityContext="false" 
	xmlns="http://www.mendix.com/widget/1.0/">
	<name>Button Filter</name>
	<description>The description of this widget.</description>

	<icon> 
	</icon>

	<properties>
		<!-- LIST -->
		<property key="targetGridName" type="string" required="false" defaultValue="">
			<caption>Grid Name</caption>
			<category>List</category>
			<description>The name of the list/grid on this page, as configured in the modeler. Optionally use a class name instead in the "Grid Class" parameter.</description>
		</property>
		<property key="targetGridClass" type="string" required="false" defaultValue="">
			<caption>Grid Class</caption>
			<category>List</category>
			<description>(Optional) Instead of a list/grid name, you can enter the CSS class of one or more grids here. Any grids on the page with this class will be connected.</description>
		</property>
		<property key="gridEntity" type="entity" required="true">
			<caption>Grid Entity</caption>
			<category>List</category>
			<description>The type of objects in the list/grid.</description>
		</property>

		<!-- APPEARANCE -->
		<property key="filterLabel" type="translatableString" required="true">
			<caption>Filter Label</caption>
			<category>Appearance</category>
			<description>A label to be used by the Active Filters widget when this widget has an active filter.</description>
			<translations>
				<translation lang="en_US"></translation>
			</translations>
		</property>
		<property key="groupedButtons" type="boolean" defaultValue="true">
			<caption>Group Buttons</caption>
			<category>Appearance</category>
			<description>Should the buttons render as a group, wrapped in the class `.btn-group`</description>
		</property>
		<property key="activeClass" type="string" required="true" defaultValue="btn-primary">
			<caption>Active Class</caption>
			<category>Appearance</category>
			<description>The class to add when a filter is active. (default: `btn-primary`)</description>
		</property>
		<property key="showCounts" type="boolean" defaultValue="false">
			<caption>Show Counts</caption>
			<category>Appearance</category>
			<description>Counts will appear in the ::after pseudoelement of each button.</description>
		</property>
		<property key="countDisplay" type="enumeration" defaultValue="parens" required="true">
			<caption>Count Display</caption>
			<category>Appearance</category>
			<description>Render the counts in (parens) or just the number. (Parens) require no styling, while the number is more customizable with CSS. (Only used if "Show Counts" is set to Yes). **If you choose "Advanced", you should add a style rule to target the `.btn-filter::after` pseudoelement</description>
			<enumerationValues>
				<enumerationValue key="parens">Parentheses i.e. " (7)"</enumerationValue>
				<enumerationValue key="badge">Advanced i.e. "7"</enumerationValue>
			</enumerationValues>
		</property>
		<!-- TODO: placeholder for counts -->

		<!-- BEHAVIOR -->
		<property key="allowMultiselect" type="boolean" defaultValue="false">
			<caption>Allow Multiselect</caption>
			<category>Behavior</category>
			<description>Should the user be able to select multiple options at once? (Default: false)</description>
		</property>
		<property key="multiselectBehavior" type="enumeration" defaultValue="and" required="true">
			<caption>Multiselect Behavior</caption>
			<category>Behavior</category>
			<description></description>
			<enumerationValues>
				<enumerationValue key="and">And</enumerationValue>
				<enumerationValue key="or">Or</enumerationValue>
			</enumerationValues>
		</property>
		<property key="searchOptions" type="object" isList="true" required="false">
			<caption>Filters</caption>
			<category>Behavior</category>
			<description>The filters to be applied when buttons are selected.</description>
			<properties>
				<property key="optionLabel" type="translatableString" required="true">
					<caption>Button Label</caption>
					<category>Behavior</category>
					<description>The label for this button.</description>
					<translations>
						<translation lang="en_US"></translation>
					</translations>
				</property>
				<property key="optionXPath" type="entityConstraint" entityProperty="../gridEntity" required="false">
					<caption>XPath</caption>
					<category>Behavior</category>
					<description>An XPath contraint to apply when this option is selected. (i.e. [Color='Blue'])</description>
				</property>
				<property key="isDefault" type="boolean" defaultValue="false">
					<caption>Default?</caption>
					<category>Behavior</category>
					<description>should this filter be applied by default?</description>
				</property>
			</properties>
		</property>


	</properties>
</widget>
